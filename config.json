{
  "monitoring": {
    "ping_interval_seconds": 30,
    "speed_test_interval_minutes": 15,
    "connectivity_timeout_seconds": 10,
    "max_retries": 3
  },
  "targets": {
    "ping_hosts": [
      "8.8.8.8",
      "1.1.1.1", 
      "google.com",
      "cloudflare.com"
    ],
    "dns_servers": [
      "8.8.8.8",
      "1.1.1.1"
    ]
  },
  "database": {
    "file": "uptime_monitor.db",
    "retention_days": 90
  },
  "alerts": {
    "outage_threshold_seconds": 60,
    "slow_speed_threshold_mbps": 10
  },
  "server": {
    "host": "localhost",
    "port": 8000,
    "debug": true
  },
  "speed_test": {
    "method": "speedtest-cli",
    "timeout_seconds": 60,
    "server_selection": "auto",
    "fallback_method": "http_calibrated",
    "calibration_factor": 15.0
  },
  "vpn_monitoring": {
    "enabled": true,
    "check_interval_seconds": 30,
    "providers": {
      "nordvpn": {
        "enabled": true,
        "process_names": ["nordvpn", "nordvpnd"],
        "interface_names": ["nordlynx", "tun0", "tun1"],
        "ip_ranges": ["185.93.185.0/24", "185.93.186.0/24"],
        "dns_servers": ["103.86.96.100", "103.86.99.100"]
      },
      "expressvpn": {
        "enabled": true,
        "process_names": ["expressvpn", "expressvpnd"],
        "interface_names": ["tun0", "tun1"],
        "ip_ranges": ["45.67.0.0/16"],
        "dns_servers": ["10.0.0.1"]
      },
      "protonvpn": {
        "enabled": true,
        "process_names": ["protonvpn", "protonvpnd"],
        "interface_names": ["proton0", "tun0"],
        "ip_ranges": ["37.19.0.0/16"],
        "dns_servers": ["10.2.0.1"]
      },
      "surfshark": {
        "enabled": true,
        "process_names": ["surfshark", "surfsharkd"],
        "interface_names": ["surfshark", "tun0"],
        "ip_ranges": ["185.199.0.0/16"],
        "dns_servers": ["162.252.172.57"]
      }
    },
    "speed_test_impact": {
      "expected_reduction_percent": 15,
      "alert_threshold_percent": 30,
      "separate_reporting": true
    },
    "alerts": {
      "vpn_connected": true,
      "vpn_disconnected": true,
      "speed_impact": true
    }
  }
}